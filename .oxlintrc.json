    "unicorn/require-number-to-fixed-digits-argument": "error",
    "unicorn/switch-case-braces": ["error", "avoid"],
    "unicorn/text-encoding-identifier-case": "error",
    "unicorn/throw-new-error": "error",
    "vars-on-top": "error"
  },
  "overrides": [
    {
      "files": [
        "src/database/_typeorm/migrations/*.ts",
        "src/database/_typeorm/seeders/*.ts"
      ],
      "rules": {
        "max-lines-per-function": "off",
        "max-lines": "off"
      }
    },
    { "files": ["tests/**/*.setup.ts"], "rules": { "eslint/no-undef": "off" } },
    {
      "files": ["tests/**/*.test.ts", "tests/**/*.spec.ts"],
      "rules": {
        "typescript/no-unsafe-assignment": "off",
        "eslint/max-nested-callbacks": ["error", 10],
        "eslint/max-lines-per-function": "off",
        "eslint/no-undef": "off",
        "max-lines": "off",
        "no-unsafe-member-access": "off",
        "no-unsafe-argument": "off",
        "no-unsafe-type-assertion": "off",
        "vitest/warn-todo": "error",
        "vitest/no-conditional-tests": "error",
        "vitest/no-commented-out-tests": "error",
        "vitest/prefer-to-be": "error",
        "vitest/prefer-to-contain": "error",
        "vitest/prefer-to-have-length": "error",
        "vitest/consistent-vitest-vi": "error",
        "vitest/expect-expect": "error",
        "vitest/no-alias-methods": "error",
        "vitest/no-conditional-expect": "error",
        "vitest/prefer-to-be-falsy": "error",
        "vitest/no-deprecated-functions": "error",
        "vitest/no-disabled-tests": "warn",
        "vitest/prefer-to-be-object": "error",
        "vitest/no-done-callback": "error",
        "vitest/no-export": "error",
        "vitest/prefer-to-be-truthy": "error",
        "vitest/no-focused-tests": "error",
        "vitest/no-identical-title": "error",
        "vitest/no-interpolation-in-snapshots": "error",
        "vitest/no-jasmine-globals": "error",
        "vitest/no-mocks-import": "error",
        "vitest/no-standalone-expect": "error",
        "vitest/no-test-prefixes": "error",
        "vitest/valid-describe-callback": "error",
        "vitest/valid-expect": "error",
        "vitest/valid-title": "error",
        "vitest/consistent-test-it": ["error", { "fn": "it" }],
        "vitest/max-expects": ["error", { "max": 5 }],
        "vitest/prefer-todo": "error",
        "vitest/prefer-lowercase-title": "error",
        "vitest/prefer-hooks-on-top": "error",
        "vitest/prefer-called-with": "error",
        "vitest/no-duplicate-hooks": "error",
